{
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "ES2018"],
    "moduleResolution": "NodeNext",
    "noImplicitReturns": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "module": "Node16",
    "useDefineForClassFields": true,
    "outDir": "./dist"
  },
  "include": ["src"]
}
